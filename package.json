{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "f1-standings",
  "title": "Formula 1",
  "description": "List the current standings in Formula 1",
  "icon": "command-icon.png",
  "author": "csigritz",
  "contributors": [
    "sxn",
    "qeude",
    "chetan_goti",
    "drillprop"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "driver",
      "title": "Driver Standings",
      "subtitle": "F1",
      "description": "Current F1 Driver's Championship Standings",
      "mode": "view",
      "keywords": [
        "formula"
      ]
    },
    {
      "name": "constructor",
      "title": "Constructor Standings",
      "subtitle": "F1",
      "description": "Current F1 Constructor's Championship Standings",
      "mode": "view",
      "keywords": [
        "formula"
      ]
    },
    {
      "name": "schedule",
      "title": "Race Schedule",
      "subtitle": "F1",
      "description": "Current F1 Race Schedule",
      "mode": "view",
      "keywords": [
        "formula"
      ],
      "preferences": [
        {
          "required": false,
          "description": "Choose date format",
          "type": "dropdown",
          "title": "Date Format",
          "name": "dateFormat",
          "data": [
            {
              "title": "MM/DD/YYYY",
              "value": "MM/dd/yyyy"
            },
            {
              "title": "MM.DD.YYYY",
              "value": "MM.dd.yyyy"
            },
            {
              "title": "DD/MM/YYYY",
              "value": "dd/MM/yyyy"
            },
            {
              "title": "DD.MM.YYYY",
              "value": "dd.MM.yyyy"
            }
          ],
          "default": "MM/dd/yyyy"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "node-fetch": "^3.0.0",
    "cheerio": "^1.0.0-rc.10",
    "date-fns": "^3.6.0",
    "moment": "^2.29.3",
    "run-applescript": "^6.0.0",
    "raycast-toolkit": "^1.0.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "pull-contributions": "ray pull-contributions"
  }
}
